   151 0CD0 18				clc
   152 0CD1 6D 19 0C			adc LZS.ptr_offset
   153 0CD4 85 00			sta ZPLZS.SongPtr
   154 0CD6 90 02 E6 01			scc:inc ZPLZS.SongPtr+1
